{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"], // Esto agrega las definiciones de tipo de Node
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true
  }
}
