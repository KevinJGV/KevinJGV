    .techs_container {
        --s: 120px;
        --r: 1;
        --h: 0.5;
        --v: 0.29;
        --hc: calc(clamp(0, var(--h), 0.5) * var(--s));
        --vc: calc(clamp(0, var(--v), 0.5) * var(--s) * var(--r));
        --mv: 5px;
        --mh: calc(var(--mv) + (var(--s) - 2 * var(--hc)) / 2);
        --f: calc(
            2 * var(--s) * var(--r) + 4 * var(--mv) - 2 * var(--vc) - 2px
        );
    }

    .techs_container ul {
        font-size: 0;
        padding-bottom: calc(var(--s) * var(--r) + var(--mv));
    }

    .techs_container ul::before {
        content: "";
        width: calc(var(--s) / 2 + var(--mh));
        float: left;
        height: 140%;
        shape-outside: repeating-linear-gradient(
            #0000 0 calc(var(--f) - 2px),
            #000 0 var(--f)
        );
    }

    .techs_container ul li {
        position: relative;
        --x-px: calc(var(--x) * 1px);
        --y-px: calc(var(--y) * 1px);
        --border: 2px;
        background: rgba(255, 255, 255, 0.125);
        overflow: hidden;
        width: var(--s);
        margin: var(--mv) var(--mh);
        height: calc(var(--s) * var(--r));
        display: inline-block;
        font-size: initial;
        clip-path: polygon(
            var(--hc) 0,
            calc(100% - var(--hc)) 0,
            100% var(--vc),
            100% calc(100% - var(--vc)),
            calc(100% - var(--hc)) 100%,
            var(--hc) 100%,
            0 calc(100% - var(--vc)),
            0 var(--vc)
        );
        margin-bottom: calc(var(--mv) - var(--vc));
    }

    .techs_container li:before,
    .techs_container li:after {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        inset: 0px;
        background: radial-gradient(
            800px circle at var(--x-px) var(--y-px),
            rgba(255, 255, 255, 0.3),
            transparent 20%
        );
    }

    .techs_container li:before {
        z-index: 1;
    }

    .techs_container li:after {
        opacity: 0;
        z-index: 2;
    }

    .techs_container li:hover:after {
        opacity: 1;
    }

    .techs_container li > * {
        top: 50% !important;
		left: 50% !important;
		transform: translate(-50%, -50%);
        z-index: 1;
        position: absolute;
    }
</style>
