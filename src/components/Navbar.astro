---
const { hrefs } = Astro.props;
---

<nav id="sandwich" class="pointer fixed centrar_absolutoX">
	<hr />
	<hr />
</nav>
<section id="menu" class="fixed flex_col centrar_absolutoX">
	<div id="top-menu" class="flex">
		<div></div>
		<ul class="flex_col j_c">
			{
				Object.entries(hrefs).map(([label, url]) => (
					<li>
						<a href={url} class="Dela">
							{label}
						</a>
					</li>
				))
			}
		</ul>
	</div>
	<div id="bot-menu" class="flex_col text_center pointer">
		<hr />
		<hr />
	</div>
</section>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		const botMenu = document.getElementById("bot-menu");
		const menu = document.getElementById("menu");

		botMenu.addEventListener("mouseover", () => {
			menu.classList.add("hovered");
		});

		botMenu.addEventListener("mouseout", () => {
			menu.classList.remove("hovered");
		});

		botMenu.addEventListener("click", () => {
			menu.classList.toggle("closed");
			menu.classList.remove("hovered");
		});

		document.querySelector("#sandwich").addEventListener("click", () => {
			menu.classList.toggle("closed");
		});

		document.querySelectorAll("#menu li").forEach((li) => {
			li.classList.add("hover-li");
		});
	});
</script>

<style>
	hr {
		width: 200px;
	}

	#sandwich {
		top: 15px;
		width: 200px;
		padding: 10px;
		z-index: 30;
	}

	#sandwich hr {
		border: 1px var(--text-color) solid;
	}

	#sandwich:hover {
		filter: drop-shadow(0px 5px 6px #fff);
	}

	#menu,
	#menu * {
		color: var(--bg-color);
	}

	#menu {
		z-index: 100;
		width: 96vw;
		height: 96vh;
		top: 0;
		background-color: #fff;
		border-radius: 0 0 20px 20px;
	}

	#top-menu {
		flex-grow: 4;
	}

	#top-menu div {
		flex-grow: 1;
		flex-shrink: 0;
	}

	#top-menu ul {
		gap: 20px;
		flex-shrink: 0;
		flex-grow: 1;
		padding: 0;
		margin: 0;
	}

	#top-menu li {
		font-size: 5rem;
		width: fit-content;
		list-style: none;
	}

	.hover-li:hover {
		transform: translateX(20px);
		list-style: disclosure-closed !important;
	}

	#bot-menu {
		flex-grow: 0.5;
		flex-shrink: 0;
		place-content: center;
		width: fit-content;
		align-self: center;
	}

	#menu hr {
		border: 1px var(--bg-color) solid;
	}

	#menu.hovered {
		top: -20px !important;
	}

	#menu.closed {
		top: -100%;
	}
</style>
